# Database
MONGODB_URI=mongodb://localhost:27017/podcast-ai

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here

# Web3 Configuration
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
PRIVATE_KEY=your_private_key_here
RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-alchemy-key
NEXT_PUBLIC_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-alchemy-key

# Gas Configuration
GAS_LIMIT=500000
GAS_PRICE=20000000000

# Authentication
JWT_SECRET=your_jwt_secret_here

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Feature Flags
ENABLE_AI_ADS=true
ENABLE_AUTO_VERIFICATION=true
ENABLE_AUTO_PAYOUTS=true

# Monitoring
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# File Storage
AUDIO_STORAGE_PATH=public/audio
MAX_AUDIO_FILE_SIZE=50MB

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis (for caching and job queues)
REDIS_URL=redis://localhost:6379

# Webhook URLs
WEBHOOK_SECRET=your_webhook_secret
CAMPAIGN_WEBHOOK_URL=https://your-domain.com/api/webhooks/campaigns

# AI Model Configuration
AI_MODEL_TEMPERATURE=0.7
AI_MAX_TOKENS=2000
AI_TIMEOUT=30000

# Security
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Performance
MAX_CONCURRENT_AI_REQUESTS=10
CACHE_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log